		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="Name"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Strasse"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="PLZ"/>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Ort"/>
				</header>
			</Column>
			<Column hAlign="Right">
				<header>
					<Text text="SAP Debitor Id"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>